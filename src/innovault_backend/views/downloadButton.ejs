<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Download IPFS File</title>
</head>
<body>
    <h1>Download IPFS File</h1>
    <button id="downloadButton">Download IPFS File</button>

    <script>
        // Function to handle the download process
        function downloadFile() {
            // Replace 'your_ipfs_hash_here' with the actual IPFS hash of the file you want to download
            const ipfsHash = 'QmeNgQ7fUhECbAwzSMHi3M8xftnXWdptS2srEThD6PH9i4';

            // Make an AJAX request to the backend server to trigger the download process
            fetch(`/download?ipfsHash=${ipfsHash}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.text();
                })
                .then(message => {
                    // Display a success message to the user
                    alert(message);
                })
                .catch(error => {
                    // Display an error message to the user
                    console.error('There was a problem with the fetch operation:', error);
                    alert('Failed to download the file. Please try again later.');
                });
        }

        // Attach event listener to the download button
        document.getElementById('downloadButton').addEventListener('click', downloadFile);
    </script>
</body>
</html>
